{
  "manifest_version": 2,
  "name": "EN.CX extension",
  "short_name": "ENextension",
  "version": "1.0.1",

  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "96": "img/logo-96.png",
    "128": "img/logo-128.png"
  },
 
  "description": "Ускоряет работу движка Encounter, добавляет дополнительную информацию.",

  "content_scripts": [
    {
      "matches": [
        "*://*.en.cx/gameengines/encounter/play/*",
        "*://*.encounter.cx/gameengines/encounter/play/*",
        "*://*.encounter.ru/gameengines/encounter/play/*",
        "*://*.en-world.org/gameengines/encounter/play/*",
        "*://*.quest.ua/gameengines/encounter/play/*",
        "*://quest.ua/gameengines/encounter/play/*"
      ],
      "css": [
        "style/jquery-ui.min.css",
        "style/play.css"
      ],
      "js": [
        "lib/jquery.js",
        "lib/jquery-ui.min.js",
        "scripts/en_codes.js",
        "scripts/en_task.js",
        "scripts/en_hints.js",
        "scripts/en_bonuses.js",
        "scripts/en_messages.js",
        "scripts/en_game.js"
      ]
    }
  ]

}
