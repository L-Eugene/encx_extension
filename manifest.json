{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "short_name": "ENextension",
  "version": "1.2.2",

  "author": "Eugene Lapeko",

  "default_locale": "ru",

  "applications": {
    "gecko": {
      "id": "encx_extension@lapeko.info"
    }
  },

  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "96": "img/logo-96.png",
    "128": "img/logo-128.png"
  },

  "description": "__MSG_extensionDescription__",

  "permissions": ["storage"],

  "web_accessible_resources": [
    "img/logo-96.png",
    "img/gear-35.png",
    "style/images/ui-icons_444444_256x240.png",
    "style/images/ui-icons_555555_256x240.png",
    "style/images/ui-icons_777620_256x240.png",
    "style/images/ui-icons_777777_256x240.png",
    "style/images/ui-icons_cc0000_256x240.png",
    "style/images/ui-icons_ffffff_256x240.png"
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "background": {
    "scripts": [
      "background/options-init.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.en.cx/gameengines/encounter/play/*",
        "*://*.encounter.cx/gameengines/encounter/play/*",
        "*://*.encounter.ru/gameengines/encounter/play/*",
        "*://*.en-world.org/gameengines/encounter/play/*",
        "*://*.quest.ua/gameengines/encounter/play/*",
        "*://quest.ua/gameengines/encounter/play/*"
      ],
      "css": [
        "style/jquery-ui.min.css",
        "style/play.css",
        "style/level-carousel.css"
      ],
      "js": [
        "lib/jquery.js",
        "lib/jquery-ui.min.js",
        "scripts/game_manager.js",
        "scripts/game_events.js",
        "scripts/game_storage.js",
        "scripts/game_prepare.js",
        "scripts/game_codes.js",
        "scripts/game_level_list.js",
        "scripts/game_task.js",
        "scripts/game_hints.js",
        "scripts/game_bonuses.js",
        "scripts/game_messages.js",
        "scripts/en_game.js"
      ]
    }
  ]

}
