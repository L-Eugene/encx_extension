{
  "manifest_version": 2,
  "name": "EN.CX extension",
  "version": "1.0.0",

  "icons": {
    "48": "img/logo-48.png"
  },
 
  "description": "Making encounter game engine work faster and more informative.",

  "content_scripts": [
    {
      "matches": [
        "*://*.en.cx/gameengines/encounter/play/*",
        "*://*.encounter.cx/gameengines/encounter/play/*",
        "*://*.encounter.ru/gameengines/encounter/play/*",
        "*://*.en-world.org/gameengines/encounter/play/*",
        "*://*.quest.ua/gameengines/encounter/play/*",
        "*://quest.ua/gameengines/encounter/play/*"
      ],
      "css": [
        "style/jquery-ui.min.css",
        "style/play.css"
      ],
      "js": [
        "lib/jquery.js",
        "lib/jquery-ui.min.js",
        "scripts/en_codes.js",
        "scripts/en_task.js",
        "scripts/en_hints.js",
        "scripts/en_bonuses.js",
        "scripts/en_messages.js",
        "scripts/en_game.js"
      ]
    }
  ]

}
